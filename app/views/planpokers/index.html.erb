<h1> Poker Planning </h1>

<div class="row">

  		<div class="col-md-2 list">
  		 	<p class="ptitle">Backlog</p>
        	<% if @userstories.count > 0  %>
          		<div class="listcard">
	      		 	<% @userstories.each do |userstorie| %>
	      		 	 	<p><%= link_to userstorie.title, user_story_path(userstorie, projekt_id: @projekt_id) %></p>
	            	<% end %>
        		</div>
        	<% end %>
  		</div>
  		<form>
	  		<div class="col-md-1">
	  			<label for="example-number-input" class="col-2 col-form-label">Spieler Anzahl</label>
	  			<div class="col-5">
	    			<input class="form-control" type="number" min="2" max="20" value="3" id="example-number-input">
	  			</div>
	  			<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>

		<div class="col-md-1">
			<%= form_tag(:action => 'createfields') do %>
  			<%= text_field_tag :playernumber, params[:playernumber], class: "form-control", type: "number", min: "2", value: "2"%>
  			<%= submit_tag "Submit" %>
			<% end %>
		</div>


</div>

